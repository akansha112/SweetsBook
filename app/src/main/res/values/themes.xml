<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.RecipeTryExample" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="textColorSearchUrl">@color/black</item>

    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">#808080</item>
        <item name="android:editTextColor">@color/black</item>
                <item name="android:fontFamily">@font/noto_serif</item>
        <item name="android:textSize">15sp</item>
        <item name="queryHint">Search Recipes here...</item>
        <item name="iconifiedByDefault">false</item>
    </style>
    <style name="Theme.RecipeTryExample" parent="Base.Theme.SweetsBook" />
    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyRating" parent="Widget.AppCompat.RatingBar">
<!--non selected star color-->
        <item name="colorControlNormal">#4D000000</item>
        <item name="colorControlActivated">@color/pink</item>


    </style>
</resources>